<div class="container">
      <div class="event-card">
            <div class="event-card-info">
              <h3>Event: <%= @event.name %></h3>
              <h3>Location: <%= @event.location  %> </h3>
              <h3>Date: <%= @event.start_date %> <%= @event.end_date  %> </h3>
            </div>
            <div class="event-card-like">
              <h3>photos: <%= @event.photos.count%></h3>
              <h3>likes: 124 </h3>
              <h3>comments: 1246 </h3>
            </div>
            <div class="event-card-avatar">
              <h3><%= image_tag(User.find(@event.user_id).photo, :style=>'height:60px; width:60px; border-radius:50px;') %></h3>
              <h3>creator</h3>
            </div>
      </div>
  <div class="gallery">
    <div class="row">
      <% @event.photos.each do |photo|  %>
        <div class="col-xs-4">
          <div class="photo">
          <%= cl_image_tag(photo.file, :width=>70, :height=>70) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

