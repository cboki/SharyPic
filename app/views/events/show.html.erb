<div class="container">
  <div class="event-card">
    <div class="event-card-avatar">
      <h3><%= image_tag(User.find(@event.user_id).photo, :style=>'height:60px; width:60px; border-radius:50px;') %></h3>
    </div>
    <div class="event-card-info">
      <h3> <%= @event.name.upcase %></h3>
      <h3> <%= @event.location  %> </h3>
      <h3><%= @event.start_date %> <%= @event.end_date  %> </h3>
    </div>
  </div>
  <div class="event-card-like">
    <h3> <i class="far fa-image"></i> photos: <%= @event.photos.count%></h3>
    <h3><i class="fas fa-heart"></i> likes: <%= @event.likes.count%></h3>
    <h3><i class="far fa-comment"></i> comments: <%= @event.photo_comments.count %></h3>
  </div>
  <% if current_user.is_not_guest?(@event) %>
  <div class="row">
    <%= simple_form_for [@eventguest], url: user_event_event_guests_path(current_user, @event), :method => :post do |f| %>
    <%= f.submit "Join Event!", class: "btn btn-danger" %>
    <% end %>
  </div>
  <% else %>
  <div class="gallery">
    <div class="row">
      <% @event.photos.each do |photo|  %>
      <%= link_to event_photo_path(photo) do %>
      <div class="col-xs-4 col-md3">
        <div class="photo">
          <%= cl_image_tag(photo.file) %>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

